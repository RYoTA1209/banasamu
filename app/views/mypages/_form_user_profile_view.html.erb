               <div class="col-lg-8">
                   <h3 class="user_infomation_text"><%=current_user.name%></h3>
               </div>
               <br/>
             </div>
          
            <!--Birthday-->
            <div class="form-group">
              <label class="col-lg-3 control-label">Birthday:</label>
              <div class="col-lg-8">
