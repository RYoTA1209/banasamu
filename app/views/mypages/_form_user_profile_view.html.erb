        <div class="col-md-3">
            <div class="text-center">
                 <!-- SET ANOTHER PICTURE AVATAR-->
                <p hidden><%= @image=Image.where(user_id: current_user.id).last%></p>
              <br/>
                <% if @image != nil %>
                    <%= image_tag @image.file , :class =>"avatar img-circle",:alt =>"avatar",:width =>"180",:height =>"180"%>
