<p id="notice"><%= notice %></p>

<h1>Listing Review Foods</h1>

<table>
  <thead>
    <tr>
      <th>Review</th>
      <th>Food</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @review_foods.each do |review_food| %>
      <tr>
        <td><%= review_food.review_id %></td>
        <td><%= review_food.food_id %></td>
        <td><%= link_to 'Show', review_food %></td>
        <td><%= link_to 'Edit', edit_review_food_path(review_food) %></td>
        <td><%= link_to 'Destroy', review_food, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

